<%= simple_form_for(@menu_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :target %>
    <%= f.input :slug %>
    <%= f.input :target_type %>
    <%= f.input :weight %>
    <%= f.input :published %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
