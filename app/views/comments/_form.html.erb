<%= simple_form_for([@post,@comment], :html=>{:class=>"well"}) do |f| %>
  <%= f.error_notification %>
  <fieldset>
  	<legend>Leave a reply</legend>
  <div class="form-inputs">

    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :content, :input_html => {:class=> "input input-span5"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  </fieldset>
<% end %>
